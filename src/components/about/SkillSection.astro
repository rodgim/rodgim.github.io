---

interface Props {
  class?: string
  title: string
  skills: {
    name: string
    icon: string
  }[]
}

const { class: className, title, skills, ...props } = Astro.props
---

<div
  class="not-prose flex flex-col rounded-xl border py-3 px-3 gap-y-3 sm:gap-y-4"
  {...props}
>
  <div class='m-0 px-2 text-lg font-medium'>{title}</div>
  <div class='flex flex-col items-center sm:flex-row sm:flex-wrap sm:justify-start'>
    {
      skills.map((skill) => (
      <div class='flex gap-x-3 rounded-lg border border-transparent px-1.5 py-1 transition-colors hover:border-border hover:bg-muted'>
        <div class="flex flex-col items-center justify-center">
          <div class="inline-flex flex-col items-center justify-center p-3 border rounded-md bg-zinc-800 border-zinc-600">
            <img src={skill.icon} alt={skill.name} class="size-9" />
          </div>
          <span class="text-zinc-400 text-sm mt-1 font-sans">{skill.name}</span>
        </div>
      </div>
      ))
    }
  </div>
</div>